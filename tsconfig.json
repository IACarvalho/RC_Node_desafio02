{
  "compilerOptions": {
    "target": "es5", // Define a versão do ECMAScript para a qual o código será transpilado.
    "module": "commonjs", // Define o sistema de módulos a ser usado no código transpilado.
    "lib": [
      "es2020" // Especifica as bibliotecas padrão a serem incluídas no ambiente de compilação.
    ],
    "outDir": "./dist", // Diretório onde os arquivos transpilados serão gerados.
    "rootDir": "./src", // Diretório raiz dos arquivos de origem.
    "allowJs": true, // Permite a compilação de arquivos JavaScript.
    "strict": true, // Ativa todas as verificações de tipo estritas.
    "noImplicitAny": true, // Gera erro quando o tipo `any` é implicitamente assumido.
    "strictPropertyInitialization": false, // Desativa a verificação estrita de inicialização de propriedades de classe.
    "esModuleInterop": true, // Habilita interoperabilidade com módulos ES.
    "resolveJsonModule": true, // Permite a importação de arquivos JSON.
    "experimentalDecorators": true, // Habilita o suporte a decoradores experimentais.
    "emitDecoratorMetadata": true, // Emite metadados de tipo para decoradores.
    "skipLibCheck": true, // Pula a verificação de tipo dos arquivos de declaração.
    "forceConsistentCasingInFileNames": true // Força o uso consistente de maiúsculas e minúsculas nos nomes de arquivos.
  }
}